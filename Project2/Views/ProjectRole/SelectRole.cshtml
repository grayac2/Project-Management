@model Project2.Models.ViewModels.SelectRoleVM
@{
    ViewData["Title"] = "Role Selection";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AssignProjectRole">
    <div class="form-horizontal">
        <input type="hidden" name="projectId" value="@Model.ProjectId"/>
        <input type="hidden" name="personId" value="@Model.PersonId" />
        <div class="form-group">
            <label for="roleId" class="control-label col-md-2">Select a Role:</label>
            <div class="col-md-10">
                <select name="roleId" id="roleId" class="form-control">
                    @foreach (var role in Model.RoleNames)
                    {
                        <option value="@role.Id">@role.Name</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10"> <input type="submit" value="Select Role" class="btn btn-default"/>
            </div>
        </div>
    </div>
</form>